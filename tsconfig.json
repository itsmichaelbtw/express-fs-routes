{
    "compilerOptions": {
        "lib": ["ES2015"],
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist"
    },
    "include": ["./lib"],
    "exclude": ["test", "node_modules"]
}
