{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ES2020"
    }
  },
  "include": ["lib", "scripts", "test"],
  "files": ["index.d.ts"],
  "exclude": ["node_modules", "dist"]
}
