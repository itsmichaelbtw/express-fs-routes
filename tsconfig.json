{
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ES2015",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "declaration": true,
        "declarationDir": "./dist/types",
        "resolveJsonModule": true
    },
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "ES2020"
        },
    },
    "include": ["lib"], 
    "files": ["index.d.ts"],
    "exclude": ["test", "node_modules", "dist"],
}
